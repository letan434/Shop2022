<body>
    <input type="hidden" id="hidCulture" value="@culture" />
    <input type="hidden" id="hidBaseAddress" value="@Configuration["BaseAddress"]" />
    <section class="header">
        <div class="container">
            <div id="welcomeLine" class="row justify-content-between ">
                @if (User.Identity.IsAuthenticated)
                {
                    <div class="col-4 m-auto">Xin chào!<strong> @User.Identity.Name</strong></div> }
                else
                {
                    <div class="col-4 m-auto">Xin chào!</div>}
                <div class="col ">
                    <div class="text-end">
                        @*<language-nav language-label="NativeName"
                                          cookie-handler-url="@(Url.Action("SetCultureCookie", "Home", new { area= "", cltr="{0}", returnUrl="{1}" }))">
                            </language-nav>*@

                        <a href="/@culture/cart">
                            <span class="btn btn-mini btn-primary">
                                <i class="icon-shopping-cart icon-white"></i> [ <span id="lbl_number_items_header">0</span> ] Giỏ hàng
                            </span>
                        </a>
                    </div>
                </div>
            </div>
            <!-- Navbar ================================================== -->
            <div id="logoArea" class="navbar navbar-expand-lg navbar-light  navbar-inverse">
                <div class="col-2">
                    <a class="navbar-brand col-8" href="/">
                        <img loading="lazy" class="logo" src="~/assets/pages/home/images/logo.png" alt="logo" style="width: 100%; height: auto" width="300" height="80">
                    </a>

                </div>


                <button id="smallScreen" class="navbar-toggler btn-trial" data-bs-toggle="modal" data-bs-target="#exampleModal" type="button" aria-expanded="false"
                        aria-label="Toggle navigation">
                    hello
                </button>
                <div class="collapse navbar-collapse justify-content-end col">
                    <form class="row g-3" method="post" action="products.html">
                        <div class="col-auto">
                            <input id="srchFld" class="form-control" type="text" placeholder="Bạn tìm gì ..." />
                        </div>
                        <div class="col-auto">
                            <select class="form-select">
                                <option selected>Tất cả</option>
                                <option value="1">One</option>
                                <option value="2">Two</option>
                                <option value="3">Three</option>

                            </select>
                        </div>
                        <div class="col-auto">
                            <button type="submit" id="submitButton" class="btn btn-primary">Tìm kiếm</button>
                        </div>
                    </form>
                    <ul id="topMenu" class="ms-2 nav text-end row">
                        <li class="col-auto"><a asp-route-culture="@culture" localize-content>Specials Offer</a></li>
                        <li class="col-auto"><a asp-route-culture="@culture" localize-content>Delivery</a></li>
                        <li class="col-auto"><a asp-route-culture="@culture" localize-content>Contact</a></li>
                        <li class="col-auto">
                            @if (User.Identity.IsAuthenticated)
                            {
                                <form action="/@culture/Account/Logout" method="post">
                                    <button type="submit" style="padding-right:0;margin-top:10px;margin-bottom:0px;background:transparent;border:none;">
                                        <span class="btn btn-large btn-success"><localize>Đăng xuất</localize></span>
                                    </button>
                                </form> }
                            else
                            {
                                <a href="/@culture/Account/Login" style="padding-right:0">
                                    <span class="btn btn-large btn-success"><localize>Đăng nhập</localize></span>
                                </a>}
                        </li>
                    </ul>
                </div>
            </div>
        </div>
    </section>
    <!-- Header End====================================================================== -->
    @RenderSection("slider", required: false)

    <div id="mainBody">
        <div class="container">
            <div class="row">
                <!-- Sidebar ================================================== -->
                @await Component.InvokeAsync("SideBar")
                <!-- Sidebar end=============================================== -->
                <div class="span9">
                    @RenderBody()
                </div>
            </div>
        </div>
    </div>
    <!-- Footer ================================================================== -->
    <div id="footerSection">
        <div class="container">
            <div class="row">
                <div class="span3">
                    <h5>ACCOUNT</h5>
